<div class="container py-5">

  <div class="row">
    <div class="col-12 mx-auto">
      <div class="card bg-secondary">
        <div class="card-body d-flex flex-wrap justify-content-center text-center">
          <h2 class="card-title mt-3 mb-4 text-warning">你想對誰說幹話？<i class="fas fa-bullhorn"></i></h2>


          <form action="/" method="POST">
            <!-- 人物選擇 -->
            <div class="form-row">
              <div class="col-12 col-lg-4 mb-2 d-flex justify-content-center">
                <div class="card" style="width: 18rem;">
                  <div class="card-top" style="height: 260px;">
                    <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg"
                      class="card-img-top" alt="engineer">
                  </div>
                  <div class="card-body">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="character" id="engineer" value="engineer">
                      <label class="form-check-label" for="engineer">
                        工程師
                      </label>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-12 col-lg-4 mb-2 d-flex justify-content-center">
                <div class="card" style="width: 18rem;">
                  <div class="card-top" style="height: 260px;">
                    <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg"
                      class="card-img-top" alt="designer">
                  </div>
                  <div class="card-body">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="character" id="designer" value="designer">
                      <label class="form-check-label" for="designer">
                        設計師
                      </label>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-12 col-lg-4 mb-2 d-flex justify-content-center">
                <div class="card" style="width: 18rem;">
                  <div class="card-top" style="height: 260px;">
                    <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg"
                      class="card-img-top" alt="boss">
                  </div>
                  <div class="card-body">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="character" id="entrepreneur"
                        value="entrepreneur">
                      <label class="form-check-label" for="entrepreneur">
                        創業家
                      </label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <hr>
            <!-- 幹話生產 -->
            <div class="form-group form-row">
              <div class="col-12 col-lg-2 mb-2 d-flex justify-content-center align-items-center">
                <button type="submit" class="btn btn-success btn-lg">產生幹話</button>
              </div>
              {{#if trashTalk}}
              <div class="col-12 col-lg-10 d-flex justify-content-center">
                <textarea class="col-12 bg-warning">{{trashTalk}}</textarea>
              </div>
              {{/if}}
            </div>

          </form>


        </div>
      </div>
    </div>
  </div>

</div>